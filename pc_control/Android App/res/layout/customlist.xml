<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/RelativeLayout01" android:layout_width="fill_parent"
 android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">

<TextView
    android:id="@+id/tvName"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@+id/TextView01"
    android:textColor="#7438ff"
    android:textSize="14dip"
    android:textStyle="bold" >
</TextView>
<TextView android:id="@+id/tvDesc" android:layout_height="wrap_content" android:text="TextView" android:layout_width="wrap_content" android:layout_below="@+id/tvName" android:layout_alignLeft="@+id/tvName" android:layout_alignParentRight="true"></TextView>

<TextView
    android:id="@+id/tvEmpty"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/tvDesc"
    android:text="@string/Empty" />

</RelativeLayout>